<header class="header">
  <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
    <div class="flex justify-between items-center h-20">
      <a href="/" class="text-2xl tracking-tight" style="font-family: 'Playfair Display', serif; font-weight: 700; color: var(--color-ink);">
        {{ site.title }}
      </a>

      {# Desktop navigation #}
      <nav class="hidden md:flex space-x-10">
        <a href="/" class="nav-link{% if page.url == '/' %} nav-link-active{% endif %}">Home</a>
        <a href="/docs/" class="nav-link{% if '/docs/' in page.url %} nav-link-active{% endif %}">Handbook</a>
      </nav>

      {# Mobile menu button #}
      <button
        type="button"
        class="md:hidden p-2 -mr-2"
        style="color: var(--color-ink-muted);"
        onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    {# Mobile navigation #}
    <nav id="mobile-menu" class="hidden md:hidden pb-6">
      <div class="flex flex-col space-y-4">
        <a href="/" class="nav-link{% if page.url == '/' %} nav-link-active{% endif %}">Home</a>
        <a href="/docs/" class="nav-link{% if '/docs/' in page.url %} nav-link-active{% endif %}">Handbook</a>
        {% if '/docs/' in page.url %}
        <div class="pt-4 border-t" style="border-color: var(--color-sepia-200);">
          <p class="text-xs uppercase tracking-widest mb-4" style="color: var(--color-ink-muted); font-weight: 600;">Contents</p>
          {% set navPages = collections.all | eleventyNavigation %}
          {% for entry in navPages %}
          <a href="{{ entry.url }}" class="block py-2 nav-link{% if entry.url == page.url %} nav-link-active{% endif %}">
            {{ entry.title }}
          </a>
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </nav>
  </div>
</header>

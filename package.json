{
  "name": "claude-agent-handbook",
  "version": "1.0.0",
  "description": "Documentation and handbook for Claude agents",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve --watch",
    "dev:css": "tailwindcss -i ./src/assets/css/main.css -o ./_site/assets/css/main.css --watch",
    "build": "npm-run-all build:css build:eleventy",
    "build:css": "tailwindcss -i ./src/assets/css/main.css -o ./_site/assets/css/main.css --minify",
    "build:eleventy": "eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "tailwindcss": "^4.0.0"
  }
}
